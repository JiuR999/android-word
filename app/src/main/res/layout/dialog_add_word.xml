<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_item"
    android:padding="@dimen/margin_item">


    <com.google.android.material.textfield.TextInputLayout
        style="@style/editAccountStyle"
        android:hint="请输入英文单词"
        app:endIconMode="clear_text"
        app:endIconTint="?attr/colorSurface">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_word_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/editAccountStyle"
        android:hint="请输入单词音节"
        app:endIconMode="clear_text"
        app:endIconTint="?attr/colorSurface">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_word_phono"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/editAccountStyle"
        android:hint="请输入单词含义"
        app:endIconMode="clear_text"
        app:endIconTint="?attr/colorSurface">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_word_tans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/editAccountStyle"
        android:hint="请输入例句"
        app:endIconMode="clear_text"
        app:endIconTint="?attr/colorSurface">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_example"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_lr"
        android:layout_gravity="end">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_item"
            app:strokeWidth="1dp"
            android:text="@string/cancel"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:textColor="?attr/colorPrimary"
            app:iconTint="?attr/colorPrimary"
            app:icon="@drawable/outline_cancel_24"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_item"
            android:text="@string/add"
            app:icon="@drawable/twotone_drive_file_rename_outline_24"/>
    </LinearLayout>
</LinearLayout>